<Window x:Class="MainPower.DrawingsDatabase.DatabaseHelper.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" Loaded="WindowLoaded" Height="154"
        Width="526" Title="Database Settings" Icon="/DatabaseHelper;component/Images/MainPowerIconGreen.png"
        ShowInTaskbar="False" ResizeMode="NoResize">
  <Grid>
    <Label Content="Database Connection String" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0"
           VerticalAlignment="Top" />
    <TextBox Height="23" Margin="12,46,12,0" Name="txtConnectionString" VerticalAlignment="Top" />
    <Button Content="Save and Close" Height="25" HorizontalAlignment="Right" Margin="0,75,12,0" Name="btnOK"
            VerticalAlignment="Top" Width="101" IsDefault="True" Click="BtnOkClick" />
  </Grid>
</Window>